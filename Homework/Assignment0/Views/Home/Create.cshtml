@{
    ViewData["Title"] = "Create aa Profile";
}

<div class="text-center">
    <h1 class="display-4">Create a Profile</h1>
    <br>
    <br>
     <form action="/action_page.php">
        <div class="form-group">
            <label for="name">Full Name</label>
            <input type="name" class="form-control" id="name">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email">
        </div>
        <div class="form-group">
            <label for="pwd">Password</label>
            <input type="password" class="form-control" id="pwd">
        </div>
        <div class="form-group">
            <label for="num">Credit Card Number</label>
            <input type="numm" class="form-control" id="num">
        </div>
        <div class="form-group">
            <label for="cvc">CVC Code</label>
            <input type="cvc" class="form-control" id="cvc">
        </div>
        <a asp-area="" asp-controller="Home" asp-action="Selection" class="btn btn-warning">Create Account</a>
    </form> 
</div>